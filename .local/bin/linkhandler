#!/bin/sh
url=${1:-$(xclip -o)}
case "$url" in
	*youtube.com/watch*|*youtube.com/playlist*|*youtube.com/shorts*|*youtu.be*|*mkv|*webm|*mp4)
		setsid -f mpv --terminal=no "$url" ;;
	*png|*jpg|*jpe|*jpeg|*gif|*webp)
		curl -sL "$url" -o "/tmp/${url##*/}" && nsxiv -afq "/tmp/${url##*/}"  >/dev/null 2>&1 & ;;
	*pdf|*cbz|*cbr)
		curl -sL "$url" -o "/tmp/${url##*/}" && zathura --mode fullscreen "/tmp/${url##*/}" >/dev/null 2>&1 & ;;
	*mp3|*flac|*opus|*mp3?source*)
		dl -c 'aria2c' "$url" >/dev/null 2>&1 ;;
	*torrent)
		transadd "$url" ;;
	*)
		[ -f "$url" ] && setsid -f "$TERMINAL" -e "$EDITOR" "$url" >/dev/null 2>&1 || setsid -f "$BROWSER" "$url" >/dev/null 2>&1
esac
