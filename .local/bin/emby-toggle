#!/bin/sh

# Check if Emby service is active
if systemctl is-active emby-server.service >/dev/null; then
  # Emby is running
  choice=$(printf "No\nYes" | dmenu -i -p "Turn off Emby?")
  if [ "$choice" = "Yes" ]; then
    sudo systemctl stop emby-server.service
    notify-send "Emby disabled."
  fi
else
  # Emby is not running
  choice=$(printf "No\nYes" | dmenu -i -p "Turn on Emby?")
  if [ "$choice" = "Yes" ]; then
    sudo systemctl start emby-server.service
    notify-send "Emby enabled."
  fi
fi
