#!/bin/sh
while read -r file
do
        case "$1" in
	"w")	setbg "$file" & ;;
        "s")
		dest=$(sed -e 's/\s*#.*//' -e '/^$/d' -e 's/^\S*\s*//' "${XDG_CONFIG_HOME:-$HOME/.config}/shell/bm-dirs" | dmenu -l 20 -i -p "Copy to where?")
		[ -n "$dest" ] && dest=$(eval printf '%s\\n' "$dest") && safe cp "$file" "$dest" && notify-send -i "$(readlink -f "$file")" "$file copied to $dest" &
		;;
        "m")
		dest=$(sed -e 's/\s*#.*//' -e '/^$/d' -e 's/^\S*\s*//' "${XDG_CONFIG_HOME:-$HOME/.config}/shell/bm-dirs" | dmenu -l 20 -i -p "Move to where?")
		[ -n "$dest" ] && dest=$(eval printf '%s\\n' "$dest") && safe mv "$file" "$dest" && notify-send -i "$(readlink -f "$file")" "$file moved to $dest" &
		;;
	"r")
		magick "$file" -rotate 90 "$file" ;;
	"R")
		magick "$file" -rotate -90 "$file" ;;
	"f")
		magick "$file" -flop "$file" ;;
	"c")
		xclip -selection clipboard -target image/png "$file" && notify-send "Image copied to clipboard" & ;;
	"y")
		printf "%s" "${file##*/}" | xclip -selection clipboard && notify-send "Filename copied to clipboard" & ;;
	"Y")
		readlink -f "$file" | xclip -selection clipboard && notify-send "File path copied to clipboard" & ;;
	"d")
		[ "$(printf "No\nYes\n" | dmenu -i -p "Delete selected files?")" = "Yes" ] && rm "$file" && notify-send "$file deleted." ;;
	"g")
		setsid -f gimp "$file" ;;
	"i")
		notify-send "File information" "$(mediainfo "$file" | sed "s/[ ]\+:/:/g;s/: /: <b>/;s/$/<\/b>/" | grep "<b>")" ;;
        esac
done
