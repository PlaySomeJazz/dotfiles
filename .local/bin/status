#!/bin/ksh
export LC_ALL=C

: 'These paths should be portable, unless using multiple batteries or dongles'
batt=`echo /sys/class/power_supply/BAT?*`
btooth=`echo /sys/class/bluetooth/hci0/rfkill*/state`
wifi=`echo /sys/class/net/w*/operstate`
flag=`echo /sys/class/net/w*/flags`
ethernet=`echo /sys/class/net/e*/operstate`

: 'Run these when receiving signals, instead of every n seconds'
get_torr()
{
	t=0; while read -r _ p _; do case $p in 100%) ;; *%|n/a) t=$((t+1));;esac;done <<-EOF
	`transmission-remote -l 2>/dev/null`
	EOF
	[ ${t:-0} -ne 0 ] && t="  TORR $t  ::" || t=''
}
get_tasks()
{
	r=0 q=0; while read -r _ s _; do case $s in running) r=$((r+1)) ;; queued) q=$((q+1)) ;; esac; done <<- !
	`tsp 2>/dev/null`
	!
	ts=$((r+q)); [ $ts -gt 0 ] && ts="  TSP $ts ($q)  ::" || ts=''
}
get_bt() { read bt < $btooth; [ $bt -eq 1 ] && bt=on || bt=off; } ; get_bt

: 'Set your signals here'
trap get_tasks 10 ; trap get_torr 12 ; trap get_bt 34

: 'The loop. `printf` for time and interruptible sleep are not POSIX'
n=0 nv=1
while :; do
	n=$((n+1))
	printf -v time_date '%(%d %b (%a), %R)T\n' -1
	read net < $wifi; read eth < $ethernet
	[ $eth = up ] && eth='::  ETH on  ' || eth=''
	while read -r k v _;do case $k in MemTotal:)all=$v;;MemAvailable:)free=$v;break;;esac;done</proc/meminfo;mem=$(((all-free)*100/all))
	read raw_cpu < /sys/class/thermal/thermal_zone0/temp; cpu=${raw_cpu%000}Â°C
	set -- `df / --output=pcent`
	read bs<$batt/status;case "$bs" in Full)b='';;*)read c<$batt/capacity;[ $c -le 25 ] && c="[ ! ] $c";b="  BATT $c% ($bs)  ::";;esac
	[ \( $net = up -a $nv -eq 0 \) -o $net = down -o $n -eq 4 ] &&
		case $net in
			up)
				if ping -c 1 -W 1 1.1.1.1 > /dev/null 2>&1 || ping -c 1 -W 3 1.1.1.1 > /dev/null 2>&1; then
					nv=1 warn=''
				else
					nv=0 warn='[ ! ]'
				fi
				for f in /sys/class/net/tun*/operstate; do [ -e $f ] && vpn='::  VPN on  ' || vpn='' && break; done
				;;
			*)
				read fl < $flag && { test $fl = 0x1003 && warn='[ w ]' || warn='[ off ]' ; }
				nv=0
				;;
		esac
	case $n in 4) get_torr; n=0;;esac
	xsetroot -name "$b$ts$t  DISK $2  |  RAM $mem%  |  TEMP $cpu  |  BT $bt  |  WIFI $warn $net  |  $time_date  $eth$vpn"
	sleep 10
done
