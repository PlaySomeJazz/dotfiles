#!/bin/sh
current=$(brightnessctl -e4 -m | awk -F, '{print substr($4, 0, length($4)-1)}'); [ "$current" -lt 30 ] && [ "$1" = "down" ] && exit 1
case $1 in
	up) brightnessctl -e4 set 5%+ ;;
	down) brightnessctl -e4 set 5%- ;;
esac
brightness=$(brightnessctl -e4 -m | awk -F, '{print substr($4, 0, length($4)-1)}')
dunstify -a "Backlight" -u low -r 9994 -h int:value:"$brightness" -i "$PIX/brightness.svg" "Brightness" "$brightness%" -t 1000
