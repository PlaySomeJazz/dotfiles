#!/bin/sh

if [ -z "$1" ]; then
	url="$(xclip -o)"
else
	url="$1"
fi

base="$(basename "$url")"
notify-send "â³ Queuing $base..."
cmd="$2"
[ -z "$cmd" ] && cmd="yt-dlp --ignore-config --embed-metadata -x -f bestaudio"
idnum="$(tsp $cmd "$url")"
realname="$(echo "$base" | sed "s/?\(source\|dest\).*//;s/%20/ /g")"
tsp -D "$idnum" mv "$base" "$realname"
tsp -D "$idnum" notify-send "ğŸ‘ $realname done."
